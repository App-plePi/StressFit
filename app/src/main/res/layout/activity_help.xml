<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.SurveyActivity">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="450dp"
            android:text="도움이 필요하시다면\n아래를 확인해주세요!"
            android:textColor="@color/black"
            android:textSize="25sp"

            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginBottom="20dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/help1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="청소년 스트레스" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/help2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:layout_constraintTop_toBottomOf="@+id/help1"

                android:layout_marginTop="25dp"

                android:text="학생 상담센터"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/help3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:layout_constraintTop_toBottomOf="@+id/help2"

                android:layout_marginTop="25dp"

                android:text="서울시 정신건강 브랜드"
                 />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/help4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:layout_constraintTop_toBottomOf="@+id/help3"

                android:layout_marginTop="25dp"
                android:text="위 버튼을 누르면 웹사이트로 연결됩니다.\n이외에도 지역 보건소 혹은\n병원에서 심리상담을 받으실 수 있습니다."
                android:textSize="8pt" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/goMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginTop="640dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="30dp"

            android:text="메인화면으로 돌아가기"
            android:textSize="20sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>