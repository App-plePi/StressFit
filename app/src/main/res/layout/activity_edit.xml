<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.community.WriteActivity">

        <EditText
            android:id="@+id/ed_write_ed"
            android:layout_width="match_parent"
            android:layout_height="388dp"
            android:layout_marginTop="54dp"
            android:layout_marginBottom="90dp"
            android:background="@drawable/edt2"
            android:gravity="top"
            android:paddingStart="3dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_edit_ed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_edit_ed"
            android:layout_width="156dp"
            android:layout_height="53dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/submit_btn"
            android:fontFamily="@font/font"
            android:text="수정"
            android:textColor="#003288"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ed_write_ed" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>