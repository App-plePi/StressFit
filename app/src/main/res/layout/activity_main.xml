<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.MainActivity"
        android:background="@drawable/low_background">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/box"
                android:layout_width="282dp"
                android:layout_height="167dp"
                android:background="@drawable/low_box"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="382dp"
                >

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="당신의 스트레스 레벨은"
                    android:textSize="17sp"
                    android:textColor="#2c2c2c"
                    android:fontFamily="@font/font"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="120dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="{ }"
                    android:id="@+id/stress_level"
                    android:textSize="44sp"
                    android:textColor="#004246"
                    android:fontFamily="@font/font"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="110dp"
                    />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스트레스가 높지 않은 상태에요!\n낮추는 방안을 공유해주세요!"
                    android:textSize="17sp"
                    android:textColor="#2c2c2c"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="120dp"
                    android:layout_marginBottom="10dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="150dp"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/goHelp"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:text="전문적인 상담으로 도움받기"
                android:fontFamily="@font/font"
                android:textSize="17sp"
                android:textColor="#707070"
                android:background="@drawable/edt"
                android:elevation="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/goTest" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/goTest"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:text="스트레스 테스트 다시하기"
                android:textSize="17sp"
                android:textColor="#707070"
                android:fontFamily="@font/font"
                android:background="@drawable/edt"
                android:elevation="6dp"
                app:layout_constraintTop_toBottomOf="@id/goHelp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/goSns"
                android:layout_marginTop="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/goSns"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:text="스트레스 해소 커뮤니티 가기"
                android:textSize="17sp"
                android:textColor="#707070"
                android:fontFamily="@font/font"
                android:background="@drawable/edt"
                android:elevation="6dp"
                app:layout_constraintTop_toBottomOf="@id/goTest"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/goWrite"
                android:layout_marginTop="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/goWrite"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:text="스트레스 해소 방법 공유하기"
                android:textSize="17sp"
                android:textColor="#707070"
                android:fontFamily="@font/font"
                android:background="@drawable/edt"
                android:elevation="6dp"
                app:layout_constraintTop_toBottomOf="@id/goSns"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>

