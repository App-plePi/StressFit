<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PasswordResetActivity"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="63dp"
        android:layout_height="79dp"
        android:src="@drawable/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/find_pw_lr"
        android:layout_marginTop="145dp"
        android:layout_marginBottom="42dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/find_pw_lr">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="309dp"
            android:layout_height="40dp"
            android:background="@drawable/edt"
            android:fontFamily="@font/font"
            android:inputType="text"
            android:textSize="20sp"
            android:elevation="6dp"
            android:hint="EMAIL"
            android:paddingStart="10dp"
            android:id="@+id/find_my_password_input_email"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/password_find"
            android:layout_marginBottom="10dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="310dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/find_my_password_input_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/password_find"
        android:text="Find pw by email"
        android:background="@drawable/btn"
        android:fontFamily="@font/font"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:shadowColor="#7000417b"
        android:shadowDx="0"
        android:shadowDy="3.0"
        android:shadowRadius="6"
        android:layout_marginTop="27dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>